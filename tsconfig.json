{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "noEmit": true,
    "types": [
      "paper", // include global paper.js types even though we only import paper-core
      "vitest/globals" // include vitest globals for test files
    ],

    /* Vite-specific Best Practices */
    "moduleResolution": "bundler",
    "isolatedModules": true,
  },
  "include": [
    "src",
    "tests",
    "vitest.config.ts"
  ]
}
